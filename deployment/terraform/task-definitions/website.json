[
    {
        "name": "gtsite-service",
        "image": "fosskers/gtsite-service",
        "memory": 1024,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}Website",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "gtsite-service"
            }
        }
    },
    {
        "name": "gtsite-nginx",
        "image": "fosskers/gtsite-nginx",
        "memory": 128,
        "essential": true,
        "links": [
            "gtsite-service",
            "gt-transit",
            "gt-chatta-demo"
        ],
        "portMappings": [
            {
                "containerPort": 8080,
                "hostPort": 0
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}Website",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "gtsite-nginx"
            }
        }
    },
    {
        "name": "gt-transit",
        "image": "fosskers/gt-transit",
        "memory": 3072,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}Website",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "gtsite-transit"
            }
        }
    },
    {
        "name": "gt-chatta-demo",
        "image": "fosskers/gt-chatta-demo",
        "memory": 1024,
        "essential": true,
        "hostname": "chatta",
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "log${environment}Website",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "gtsite-chatta-demo"
            }
        }
    }
]
